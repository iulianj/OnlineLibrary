
@{
    ViewBag.Title = "LogIn";
}
<h2 style="margin:0">LogIn</h2>
<span class="@ViewBag.Class">@ViewBag.ErrorMessage</span>
<br /><br />

<div class="form-horizontal">
  @using (Html.BeginForm("LogIn", "NewAccount", null, FormMethod.Post))
  { @Html.AntiForgeryToken()
    <div class="form-group">
      <div class="col-md-4">
        <input type="text" class="form-control" required="" placeholder="E-mail or user name" name="UserName" autofocus/>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-4">
        <input type="password" class="form-control" required="" placeholder="Password" name="Password" />
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2"></div>
        <div class="col-md-2">
          <button class="btn btn-info btn-block">Log In</button>
        </div>
      </div>
    <div class="login-subtitle">Don't have an account yet? @Html.ActionLink("Create an account", "Register", "NewAccount") </div> }
</div>  