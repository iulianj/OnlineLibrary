
@{
    ViewBag.Title = "Register";
}

<h2 style="margin:0">Register</h2>

<span class="@ViewBag.Class">@ViewBag.ErrorMessage</span>
<br /><br />

<div class="form-horizontal">
 @using (Html.BeginForm("Register", "MyAccount", null, FormMethod.Post))
  { @Html.AntiForgeryToken()
      <div class="form-group">
        <div class="col-md-4">
        @Html.TextBox("FirstName", null, new { @class="form-control", type="text", required="", placeholder = "First Name" })
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-4">
          @Html.TextBox("LastName", null, new { @class = "form-control", type = "text", required = "", placeholder = "Last Name" })
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-4">
          @Html.TextBox("UserName", null, new { @class = "form-control", type = "text", required = "", placeholder = "User Name" })
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-4">
          @Html.TextBox("Email", null, new { @class = "form-control", type = "email", required = "", placeholder = "Email" })
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-4">
          @Html.TextBox("Password", null, new { @class = "form-control", type = "password", required = "", placeholder = "Password" })
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-2"></div>
        <div class="col-md-2">
          <button class="btn btn-info btn-block">Register</button>
        </div>
      </div> }
</div>  